on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
name: npm build, lint, test and publish
jobs:
  build-and-publish:
    name: build and publish
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@main
      - name: npm install
        uses: actions/npm@main
        with:
          args: install
      - name: npm lint
        uses: actions/npm@main
        with:
          args: run lint
      - name: docker build
        uses: actions/docker/cli@main
        with:
          args: build -t /vaquita-client .
      - name: docker login
        uses: actions/docker/login@main
        env:
          DOCKER_PASSWORD: ${{ secrets.AMBthony1234 }}
          DOCKER_USERNAME: ${{ secrets.thony9799 }}
      - name: docker push
        uses: actions/docker/cli@main
        with:
          args: push AMBthony1234/vaquita-client
